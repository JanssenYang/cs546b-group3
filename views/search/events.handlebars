<h1>Search Events</h1>
<main>
    <form action="/search" method="post" id = "searchForm">
        <label for="eventSearchParameter">Criteria Type:</label><br>
        <select id = 'eventSearchParameter' name = 'eventSearchParameter'>
            <option value="location">Location</option>
            <option value="date">Date</option>
            <option value="eventName">Name</option>
        </select>
        <br>
        <br>
        <label for="searchInput">Event Criteria:</label><br>
        <input type="text" id="searchInput" name="searchInput" class="searchInput">
        <input type="submit" id="Submit" value="Search Event">
    </form>
    <br>
    <a href = '/search/searchFriends'>Search Friends</a><br><br>
    <a href = '/search/addFriends'>Add Friends</a>
</main>

{{#if hasErrors}}
  <ul class="error-list">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
{{/if}}
