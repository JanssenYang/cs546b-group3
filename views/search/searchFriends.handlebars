<h1>Search Friends</h1>
<main>
    <form action="/search/searchFriends" method="post" id = "searchForm">
    <label for="searchParameter">Search Friend By:</label><br>
        <select id = 'searchParameter' name = 'searchParameter'>
            <option value="userName">Username</option>
            <option value="email">Email</option>
            <option value="firstName">First name</option>
            <option value="lastName">Last name</option>
        </select><br><br>
        <label for="searchInput">Enter Friend Info:</label><br>
        <input type="text" id="searchInput" name="searchInput"><br><br>
        <input type="submit" value="Submit">
    </form>
    <br>
    <a href = '/search/'>Search Events</a><br><br>
    <a href = '/search/addFriends'>Add Friends</a>
</main>

{{#if hasErrors}}
  <ul class="error-list">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
{{/if}}

