<h1>Search Results</h1>
<main>
    {{#if matchingResults}}
        {{#if searchEvents}}
            <ul class="event-list">
                {{#each events}}
                    <li>
                        <a href = '/events/{{this._id}}'>{{this.eventName}}</a>
                    </li>
                {{/each}}
            </ul>
        {{/if}}

        {{#if searchFriends}}
            <ul class="friend-list">
                {{#each friends}}
                    <li>
                        <a href = '/users/{{this.userName}}'>{{this.userName}}</a>
                    </li>
                {{/each}}
            </ul>
        {{/if}}

        {{#if addFriends}}
            {{#if hasError}}
                <div>
                    Could not add friend. Error: {{error}}
                </div>
            {{else}}
                <ul class="user-list">
                    {{#each users}}
                        <li>
                            <a href = '/search/addFriends/{{this.userName}}'>{{this.userName}}</a>
                        </li>
                    {{/each}}
                </ul>
            {{/if}}
        {{/if}}
    {{else}}
        <p>No results found.</p>
    {{/if}}

    <div>
        <a href = '/search'>Search again</a>
    </div>

</main>
